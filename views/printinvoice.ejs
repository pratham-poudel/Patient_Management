<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      width: 76mm; /* Adjusted to 3-inch paper */
      margin: 0;
      padding: 0;
    }
    
    .invoice-container {
      padding: 5px;
      border: 1px solid #000;
    }

    h2, h3, p {
      margin: 3px 0;
      text-align: center;
    }

    .header {
      border-bottom: 1px solid #000;
      padding-bottom: 5px;
    }

    .header h2 {
      font-size: 18px;
      font-weight: bold;
    }

    .header p {
      font-size: 11px;
    }

    .customer-info {
      margin-top: 5px;
      border-bottom: 1px solid #000;
      padding-bottom: 5px;
    }

    .customer-info p {
      font-size: 11px;
      text-align: left;
    }

    /* Items Table */
    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 5px;
    }

    .items-table th, .items-table td {
      border-bottom: 1px solid #000;
      padding: 3px 2px;
      font-size: 11px;
    }

    /* Explicit widths for each column to ensure proper alignment */
    .items-table th:nth-child(1), .items-table td:nth-child(1) {
      width: 40%; /* Adjust as needed */
      text-align: left;
    }

    .items-table th:nth-child(2), .items-table td:nth-child(2) {
      width: 15%; /* Adjust as needed */
      text-align: center;
    }

    .items-table th:nth-child(3), .items-table td:nth-child(3) {
      width: 20%; /* Adjust as needed */
      text-align: right;
    }

    .items-table th:nth-child(4), .items-table td:nth-child(4) {
      width: 25%; /* Adjust as needed */
      text-align: right;
    }

    .total-section {
      margin-top: 5px;
      text-align: right;
      border-top: 1px solid #000;
      padding-top: 5px;
      font-size: 12px;
      font-weight: bold;
    }

    .footer {
      margin-top: 5px;
      text-align: center;
      font-size: 10px;
    }

    .qr-code {
      margin-top: 5px;
      text-align: center;
    }

    .qr-code img {
      width: 50px;
      height: 50px;
    }

    /* Button styling */
    .print-btn {
      display: block;
      margin: 10px auto;
      padding: 5px 10px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 14px;
      text-align: center;
      width: 100%;
    }

    .print-btn:hover {
      background-color: #0056b3;
    }

    .logo {
      width: 60px;
      height: auto;
      display: block;
      margin: 0 auto -10px;
    }
  </style>
</head>
<body>
  
  <div class="invoice-container">
    <!-- Merchant Info -->
    <div class="header">
      <img class="logo" src="/images/logo.png" alt="Logo">
      <% if (merchant) { %>
        <h2><%= merchant %></h2>
      <% } else { %>
        <h2>प्रकाश मेडिकल प्रा .लि</h2>
      <% } %>      
      <p>Reg No: 3800125133310 | PAN No: 610480441</p>
      <p>शिवराज-५  चन्द्रौटा कपिलवस्तु</p>
    </div>
    <% if (invoice.type == "Invoice") { %>
        <h3>INVOICE</h3>
    <% } else { %>
        <h3>EXPENDITURE</h3>
    <% } %>
    
    <!-- Customer Info -->
    <div class="customer-info">
      <p><strong>Bill No:</strong> <%= invoice.billNo %></p>
      <p><strong>Customer Name:</strong> <%= invoice.customer.name %></p>
      <p><strong>Address:</strong> <%= invoice.customer.address %></p>
      <p><strong>Phone:</strong> <%= invoice.customer.phone %></p>
      <p><strong>Date:</strong> <%= new Date(invoice.createdAt).toLocaleDateString() %></p>
    </div>

    <!-- Items Table -->
    <table class="items-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% invoice.items.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td><%= item.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Total Price -->
    <div class="total-section">
      <p>Total: NPR <%= invoice.totalPrice %></p>
    </div>
    
    <div class="qr-code">
      <img src="https://api.qrserver.com/v1/create-qr-code/?size=50x50&data=https://prathampoudel.me/printinvoicefromuser/<%=invoice._id%>" alt="QR Code">
    </div>

    <!-- Footer -->
    <div class="footer">
      <p>Thank you for your visit!</p>
      <p>Get well soon...</p>
      <p>Contact: 9876543210</p>
    </div>
  </div>

  <!-- Print and Redirect Button -->
  <button class="print-btn" onclick="printAndRedirect()">Print Invoice</button>

  <script>
    function printAndRedirect() {
      window.print();
      setTimeout(function() {
        window.location.href = '/createInvoice'; // Redirect to desired route
      }, 1000);
    }
  </script>
</body>
</html>
