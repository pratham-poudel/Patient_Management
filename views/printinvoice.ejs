<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      width: 58mm;
      margin: 0;
      padding: 0;
    }
    
    .invoice-container {
      padding: 10px;
      border: 1px solid #000;
    }

    h2, h3, p {
      margin: 5px 0;
      text-align: center;
    }

    .header {
      border-bottom: 1px solid #000;
      padding-bottom: 10px;
    }

    .header h2 {
      font-size: 18px;
      font-weight: bold;
    }

    .header p {
      font-size: 12px;
    }

    .customer-info {
      margin-top: 10px;
      border-bottom: 1px solid #000;
      padding-bottom: 10px;
    }

    .customer-info p {
      font-size: 12px;
      text-align: left;
    }

    .items-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .items-table th, .items-table td {
      border-bottom: 1px solid #000;
      padding: 5px 0;
      font-size: 12px;
      text-align: left;
    }

    .items-table td:nth-child(3), .items-table td:nth-child(4) {
      text-align: right;
    }

    .total-section {
      margin-top: 10px;
      text-align: right;
      border-top: 1px solid #000;
      padding-top: 10px;
      font-size: 14px;
      font-weight: bold;
    }

    .footer {
      margin-top: 10px;
      text-align: center;
      font-size: 12px;
    }
    .qr-code {
      margin-top: 10px;
      text-align: center;
    }

    .qr-code img {
      width: 60px;
      height: 60px;
    }

    /* Button styling */
    .print-btn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 16px;
      text-align: center;
      width: 100%;
    }

    .print-btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <div class="invoice-container">
    <!-- Merchant Info -->
    <div class="header">
      <h2><%= merchnat %></h2>
      <p>Reg No: 123456 | PAN No: 789101112</p>
      <p>Shivraj, Chandrauta, Nepal</p>
    </div>
    <% if (invoice.type == "Invoice") { %>
        <h3>INVOICE</h3>
    <% } else { %>
        <h3>EXPENDITURE</h3>
    <% } %>
    

    <!-- Customer Info -->
    <div class="customer-info">
      <p><strong>Customer Name:</strong> <%= invoice.customer.name %></p>
      <p><strong>Address:</strong> <%= invoice.customer.address %></p>
      <p><strong>Phone:</strong> <%= invoice.customer.phone %></p>
      <p><strong>Date:</strong> <%= new Date(invoice.createdAt).toLocaleDateString() %></p>
    </div>

    <!-- Items Table -->
    <table class="items-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% invoice.items.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.quantity %></td>
            <td><%= item.price %></td>
            <td><%= item.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Total Price -->
    <div class="total-section">
      <p>Total: NPR <%= invoice.totalPrice %></p>
    </div>
    <div class="qr-code">
        <img src="https://api.qrserver.com/v1/create-qr-code/?size=60x60&data=https://prathampoudel.me" alt="QR Code">
      </div>
    <!-- Footer -->
    <div class="footer">
      <p>Thank you for your visit!</p>
      <p>Visit Again</p>
    </div>
    
  </div>

  <!-- Print and Redirect Button -->
  <button class="print-btn" onclick="printAndRedirect()">Print Invoice</button>

  <script>
    function printAndRedirect() {
      // Trigger the print action
      window.print();

      // Delay the redirection until the print dialog has been processed
      setTimeout(function() {
        window.location.href = '/createInvoice'; // Redirect to the desired route
      }, 1000); // Adjust delay if necessary
    }
  </script>
</body>
</html>
