<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor List</title>
    <style>
        html,
        body {
            height: auto;
            margin: 0;
            font-family: 'Arial', sans-serif;
        }

        .main {
            width: 100%;
            height: 100%;
            background-color: #f0f0f0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            box-sizing: border-box;
        }

        .list {
            width: 100%;
            display: flex;
            justify-content: space-around;
            max-width: 600px;
            background-color: #ffffff;
            border-radius: 20px;
            margin-bottom: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .profile {
            margin-top: 11px;
            background-color: red;
            
            height: 239px;
            width: 241px;
            margin-bottom: 12px;
        }
        .profile .img{
            width: 100%;
            height: 100%;
            object-fit:cover;
        }

        .info {
            padding: 20px;
        }

        h3 {
            margin-bottom: 10px;
            color: #333;
        }

        p {
            color: #666;
            margin-bottom: 0;
        }

        @media (max-width: 768px) {
            .list {
                border-radius: 0;
            }
        }
        .btnn{
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body>
    <a href="/profile"><button class="btnn">Go To Main Page</button></a>
    <div class="main">
        <% doctors.forEach(function(elem){ %>
            <div class="list">
                <div class="profile"><img class="img" src="/images/uploads/<%= elem.profilePic%>" alt="Doctor Image"></div>
                <div class="info">
                    <h3>
                        Dr.<%= elem.fullName %>
                    </h3>
                    <p><strong>Speciality:</strong>
                        <%= elem.speciality %>
                    </p>
                    <p><strong>Contact:</strong>
                        <%= elem.connumber %>
                    </p>
                    <p><strong>Location:</strong>
                        <%= elem.address %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= elem.email %>
                    </p>
                    <p><strong>Total Medical Patient :</strong>
                        <%= elem.patient.length %>
                    </p>
                    <p><strong>Total Lab Patient :</strong>
                        <%= elem.patientlab.length %>
                    </p>
                    <!-- Add more details as needed -->
                </div>
            </div>
            <% }) %>
    </div>
</body>

</html>